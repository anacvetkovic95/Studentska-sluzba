@model IEnumerable<StudentskaSluzba.Models.Ispit>

@{
    ViewBag.Title = "Index";
}

<h2 class="title">Lista ispita</h2>
@Html.ActionLink("Kreirajte novi ispit", "Create", new object { },
    new { @class = "link" })
<div class="table-responsive">
    <table class="table table-dark table-striped table-bordered m-0">
        <thead>
            <tr>
                <th class="index">
                    BI
                </th>
                <th>
                    Ime i prezime
                </th>
                <th>
                    Naziv predmeta
                </th>
                <th class="marks">
                    Ocena
                </th>
                <th class="options">
                    Opcije
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.BI)
                    </td>
                    <td>
                        @item.Student.Ime @item.Student.Prezime
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Predmet.NazivPredmeta)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Ocena)
                    </td>
                    <td class="options-flex">
                        <a href="@Url.Action("Edit", "Ispit", new { BI = item.BI, PredmetId = item.PredmetId })" title="Edit">
                            <i class="fas fa-pencil-alt edit"></i>
                        </a>
                        <a href="@Url.Action("Details", "Ispit", new { BI = item.BI, PredmetId = item.PredmetId })" title="Details">
                            <i class="fas fa-eye details"></i>
                        </a>
                        <a href="@Url.Action("Delete", "Ispit", new { BI = item.BI, PredmetId = item.PredmetId })" title="Delete">
                            <i class="fas fa-trash-alt delete"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
