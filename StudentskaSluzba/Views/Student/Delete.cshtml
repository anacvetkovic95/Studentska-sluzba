@model StudentskaSluzba.Models.Student

@{
    ViewBag.Title = "Delete";
}

<h2 class="title">Brisanje studenta</h2>
<h3>Da li ste sigurni da želite da obrišete studenta?</h3>
<h4>Student</h4>
<hr />
<div class="table-responsive">
    <table class="table table-dark table-striped table-bordered m-0">
        <thead>
            <tr>
                <th class="index">BI</th>
                <th>Ime i prezime</th>
                <th>Adresa</th>
                <th>Grad</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="index">
                    @Html.DisplayFor(model => model.BI)
                    @Html.ValidationMessageFor(model => model.BI, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.DisplayFor(model => model.Ime)
                    @Html.DisplayFor(model => model.Prezime)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Adresa)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Grad)
                </td>
            </tr>
        </tbody>
    </table>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="d-flex justify-content-between align-items-center mt-4">
    <input type="submit" value="Obriši" class="btn delete-button" />
    <a href="@Url.Action("Index", "Student")" class="back-button" title="Back to list">
        <i class="fas fa-arrow-circle-left"></i>
    </a>
</div>
}
